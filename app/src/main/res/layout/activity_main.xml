<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp"
    android:id="@+id/perentQuantity"
    android:background="#000"
    android:paddingEnd="1dp">



        <TextView
            android:id="@+id/textDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="40dp"
            android:text="Device"
            android:textColor="#ffff"
            android:textSize="35dp"
            android:textStyle="bold"
            />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="53dp"
        android:layout_toRightOf="@+id/textDevice"
        android:background="#ffff"
        android:ems="10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/deviceField"/>



        <TextView
            android:id="@+id/door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="1dp"
            android:text="Door State"
            android:textColor="#ffff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_below="@+id/framePoint"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/door"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <RadioButton
                android:id="@+id/radioOpen"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="130sp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:background="#1c7426"
                android:gravity="center"
                android:text="OPEN"
                android:textColor="#000" />

            <RadioButton
                android:id="@+id/radioClose"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_marginLeft="72dp"
                android:layout_toRightOf="@+id/radioOpen"
                android:background="#ee00"
                android:gravity="center"
                android:text="CLOSE"
                android:textColor="#000" />
        </RelativeLayout>
    </RadioGroup>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="1dp"
            android:text="Temperature"
            android:textColor="#ffff"
            android:textSize="35dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/fieldTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="96dp"
            android:ems="5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ffff"

            />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="280dp"
        android:id="@+id/framePoint">
        <TextView
            android:id="@+id/txtPoint"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Pointer"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="35dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationText"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_below="@+id/txtPoint"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Latitude"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_marginLeft="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            />


        <EditText
            android:id="@+id/latField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="96dp"
            android:ems="7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ffff"

            />
        <EditText
            android:id="@+id/longField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="96dp"
            android:ems="7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#ffff"

            />

    </FrameLayout>

    <Button
        android:id="@+id/buttonCancelToken"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130sp"
        android:layout_height="38dp"
        android:layout_below="@+id/radioGroup"
        android:layout_gravity="center"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/buttonSubmitToken"
        android:background="#F3E6B1"
        android:clickable="true"
        android:gravity="center"
        android:text="CANCEL"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/buttonSubmitToken"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130sp"
        android:layout_height="38sp"
        android:layout_below="@+id/radioGroup"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="#9BEFAC"
        android:clickable="true"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@android:color/black" />






</RelativeLayout>