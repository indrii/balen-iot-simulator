<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perentQuantity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1876D2"
    android:orientation="vertical"
    android:paddingTop="1dp"
    android:paddingEnd="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#0067b4"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/blnLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="110dp"
            android:maxHeight="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/balen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:nextFocusLeft="@id/blnLogo"
            android:text="commander"
            android:textColor="#fff"
            android:textSize="28dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_device" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textDevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="device"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            />
                        <EditText
                            android:id="@+id/deviceField"
                            android:layout_width="160dp"
                            android:layout_height="28dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bgedit"
                            android:drawablePadding="10dp"
                            android:textSize="15dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:padding="4dp"
                            android:textColor="#000" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_location" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/txtPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="location"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <RelativeLayout
                                android:id="@+id/relLat"
                                android:layout_width="150dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/bglocation">

                                <TextView
                                    android:id="@+id/txtLat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:text="Latitude"
                                    android:textColor="#000"
                                    android:textSize="15dp"
                                    />

                                <TextView
                                    android:id="@+id/latField"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/txtLat"
                                    android:layout_alignParentEnd="true"
                                    android:ems="9"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bglocation"
                                android:fontFamily="@font/comfortaa_regular"
                                android:nextFocusLeft="@id/relLat">


                                <TextView
                                    android:id="@+id/txtLon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:nextFocusLeft="@id/txtLat"
                                    android:text="Longitude"
                                    android:textColor="#000"
                                    android:textSize="15dp"
                                    />

                                <TextView
                                    android:id="@+id/longField"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_below="@id/txtLon"
                                    android:ems="9"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_temperature" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="temperature"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <SeekBar
                                android:id="@+id/seekBarTemp"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:padding="5dp"
                                android:progress="50"
                                android:progressTint="#04c1ea"
                                android:thumbTint="#04c1ea"


                                />

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bgkotak"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/textTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="°"
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_door" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="door state"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="28dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioOpen"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="130sp"
                                    android:layout_height="35dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/bgkotak"
                                    android:buttonTint="#038ca9"
                                    android:gravity="center"
                                    android:text="OPEN"
                                    android:textColor="#000"
                                    android:textSize="15dp"/>

                                <RadioButton
                                    android:id="@+id/radioClose"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="130dp"
                                    android:layout_height="35dp"
                                    android:layout_marginLeft="7dp"
                                    android:layout_toRightOf="@+id/radioOpen"
                                    android:background="@drawable/bgkotak"
                                    android:buttonTint="#038ca9"
                                    android:gravity="center"
                                    android:text="CLOSE"
                                    android:textColor="#000"
                                    android:textSize="15dp"/>
                            </RadioGroup>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_battery" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="battery"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            />
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="232dp"
                            android:background="@drawable/bgkotak"
                            android:orientation="horizontal"
                            android:padding="2dp"

                            >

                            <TextView
                                android:id="@+id/battreyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_regular"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#000"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_regular"
                                android:nextFocusLeft="@id/battreyText"
                                android:text="%"
                                android:textAlignment="viewStart"
                                android:textColor="#000"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/speed" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="speed"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            />
                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="180dp"
                            android:background="@drawable/bgkotak"
                            android:orientation="horizontal"
                            android:padding="2dp"

                            >

                            <TextView
                                android:id="@+id/txtSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_regular"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="#000"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_regular"
                                android:nextFocusLeft="@id/txtSpeed"
                                android:text=" Km/h"
                                android:textAlignment="viewStart"
                                android:textColor="#000"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/speed" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="IMEI"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:id="@+id/txtIMEI"
                            android:layout_width="160dp"
                            android:layout_height="28dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bgedit"
                            android:drawablePadding="10dp"
                            android:textSize="15dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:padding="4dp"
                            android:textColor="#000" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_temperature" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="humadity"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <SeekBar
                                android:id="@+id/seekBarHuma"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:padding="5dp"
                                android:progress="50"
                                android:progressTint="#04c1ea"
                                android:thumbTint="#04c1ea"


                                />

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bgkotak"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/txtHuma"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="°"
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_door"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/Brake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="brake"
                            android:textColor="#fff"
                            android:textSize="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioGroup
                                android:id="@+id/radioBrake"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioRem"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="130sp"
                                    android:layout_height="35dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/bgkotak"
                                    android:buttonTint="#038ca9"
                                    android:gravity="center"
                                    android:text="REM"
                                    android:textColor="#000"
                                    android:textSize="15dp"/>

                                <RadioButton
                                    android:id="@+id/radioTidak"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="130sp"
                                    android:layout_height="35dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/bgkotak"
                                    android:buttonTint="#038ca9"
                                    android:gravity="center"
                                    android:text="GO"
                                    android:textColor="#000"
                                    android:textSize="15dp"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Bensin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/button_battery"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="bensin"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <SeekBar
                                android:id="@+id/seekBarBensin"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:padding="5dp"
                                android:progressTint="#04c1ea"
                                android:thumbTint="#04c1ea"


                                />

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:background="@drawable/bgkotak"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/textBensin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:padding="1dp"
                                    android:text="L"
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <ToggleButton
                    android:id="@+id/toggleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/bgtrans"
                    android:fontFamily="@font/comfortaa_regular"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textOff="Transmit"
                    android:textOn="Stop"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        </LinearLayout>




    </ScrollView>






</LinearLayout>

